// owl
.ftco-owl
  position: relative
  z-index: 1
  .owl-dots, .owl-nav
  .owl-nav
    position: absolute
    top: 50%
    // margin-top: -25px;
    margin-top: -50px
    z-index: 10
    left: 0
    right: 0
    opacity: 0
    visibility: hidden
    transition: .3s all ease
    .owl-prev, 
    .owl-next
      position: absolute
      font-size: 30px
      background: $primary
      color: $white
      padding: 10px
      line-height: 0
    .owl-prev
      left: 0
    .owl-next
      right: 0
  .owl-dots
    position: relative
    text-align: center
    margin-top: 30px
    .owl-dot
      display: inline-block
      zoom: 1
      span
        width: 10px
        height: 10px
        background: #ccc
        border-radius: 50%
        display: inline-block
        margin: 5px 7px
      &.active
        span
          background: $primary
  &:hover
    .owl-nav
      visibility: visible
      opacity: 1
